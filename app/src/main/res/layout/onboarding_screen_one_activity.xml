<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/undraw_shar"
        android:layout_width="600dp"
        android:layout_height="450dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="115dp"
        android:background="@drawable/undraw_shar" />

    <TextView
        android:id="@+id/compartilhe"
        android:layout_width="365dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="12dp"
        android:gravity="center_horizontal|top"
        android:text="Compartilhe informações locais sobre o COVID19"
        android:textAppearance="@style/compartilhe"
        app:layout_constraintEnd_toEndOf="@id/undraw_shar"
        app:layout_constraintHorizontal_bias="0.421"
        app:layout_constraintStart_toStartOf="@id/undraw_shar"
        app:layout_constraintTop_toBottomOf="@id/undraw_shar" />

    <ImageButton
        android:id="@+id/arrow_1"
        android:layout_width="70dp"
        android:layout_height="79dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="772dp"
        android:background="@drawable/arrow_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.953"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>