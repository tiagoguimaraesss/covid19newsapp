<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/undraw_news"
        android:layout_width="318dp"
        android:layout_height="279dp"
        android:background="@drawable/undraw_news"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.4"/>

    <TextView
        android:id="@+id/covid19_new"
        android:layout_width="233dp"
        android:layout_height="36dp"
        android:gravity="top"
        android:text="COVID19 NEWS APP"
        android:textAppearance="@style/covid19_new"
        app:layout_constraintTop_toBottomOf="@+id/undraw_news"
        app:layout_constraintEnd_toEndOf="@id/undraw_news"
        app:layout_constraintStart_toStartOf="@id/undraw_news"/>

</androidx.constraintlayout.widget.ConstraintLayout>